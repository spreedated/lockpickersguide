<Page x:Class="LockpickersGuide.Views.PG_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LockpickersGuide.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PG_Main">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="10,57,0,0" Orientation="Horizontal">
                <Label Content="Make:" Margin="0,0,20,0"/>
                <ComboBox Width="193" ItemsSource="{Binding Path=Brands}" DisplayMemberPath="Name" />
            </StackPanel>
            <Label Content="Lockpicker Guide" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" FontSize="18pt" Foreground="LightGray" FontStyle="Normal" FontWeight="Bold" Margin="10,10,0,0"/>
            <DataGrid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,193,0,0" Height="243" Width="776"/>
    </Grid>
</Page>
