<Page x:Class="LockpickersGuide.Views.Preload"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LockpickersGuide.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Preload">

    <Grid>
        <Label x:Name="LBL_Loading" Content="Loading please wait ..." VerticalAlignment="Center" HorizontalAlignment="Center" Height="24" Margin="0,-30,0,0" />
        <ProgressBar x:Name="PRG_Progress" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="24" Margin="0,30,0,0" />
    </Grid>
</Page>
