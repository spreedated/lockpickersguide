<Page x:Class="LockpickersGuide.Views.Preload"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LockpickersGuide.Views" d:DataContext="{d:DesignInstance Type=local:Preload}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Preload">

    <Grid>
        <Label Content="{Binding LabelContent, Mode=OneWay}" d:Content="Some loading text ..." VerticalAlignment="Center" HorizontalAlignment="Center" Height="24" Margin="0,-30,0,0" />
        <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Visibility="{Binding ProgressBarVisibility, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="24" Margin="0,30,0,0" d:Value="60" />
    </Grid>
</Page>
